{
  "root": true,
  "extends": "airbnb",
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-param-reassign": [
      "error",
      { "props": true, "ignorePropertyModificationsFor": ["matrix"] }
    ],
    "no-continue": 0,
    "class-methods-use-this": 0,
    "no-console": 0
  }
}
